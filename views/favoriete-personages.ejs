        <form class="hidden-form" action="/favoriet-verwijderen" method="post">
          <input type="hidden" name="favorietePersonage" value="<%= JSON.stringify(favorietePersonage) %>">
          <button class="hidden-button" type="submit"><img class="vuilbakje" src="/images/vuilbakje.png" alt="favoriet-verwijderen"></button>
        </form>
      </div>
      <% }); %>
    </article>
  </section>
