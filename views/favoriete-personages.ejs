<%- include("partials/header") %>
<section class="favoriete-personages">
    <h2 class="page-title">Favoriete personages</h2>
    <p class="pagina-uitleg">Hier zijn al je favoriete personages. Kies er Ã©Ã©n om items, skins, wapens te veranderen en om te vechten.</p>
    <article class="personages">
      <% favorietePersonages.forEach((favorietePersonage) => { %>
        <div class="personage-container">
        <a href="/detailed-favo-page/<%= favorietePersonage.id %>" class="personage">
          <h4><%= favorietePersonage.naam %></h4>
          <img src="<%= favorietePersonage.foto %>" class="personage-foto" />
