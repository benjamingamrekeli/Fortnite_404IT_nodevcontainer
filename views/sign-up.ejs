<%- include("partials/guest-header") %>
<div class="signup-container">
    <h2 class="page-title">Registreren</h2>
    <form action="sign-up" method="post">
      <label for="newusername">Gebruikersnaam:</label>
      <input type="text" id="newusername" name="newusername" required />

      <label for="newemail">E-mail:</label>
      <input type="email" id="new-email" name="newemail" required />

      <label for="newpassword">Wachtwoord:</label>
      <input type="password" id="newpassword" name="newpassword" required />

      <label for="confirmpassword">Wachtwoord bevestigen:</label>
      <input
        type="password"
        id="confirmpassword"
        name="confirmpassword"
        required
      />

      <p>Heb je al een account? <a href="/log-in">Log-in</a></p>

      <button class="register-button" type="submit">Registreren</button>
    </form>
  </div>
<%- include("partials/footer") %>